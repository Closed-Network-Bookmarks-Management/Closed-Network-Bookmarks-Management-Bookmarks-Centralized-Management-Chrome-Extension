{
  "name": "UCloud 보안망 URL 공유 확장",
  "description": "중앙 집중식 URL 관리",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "UCloud URL"
  },
  "side_panel": {
    "default_path": "pages/Sidepanel/index.html"
  },
  "permissions": ["sidePanel", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "pages/Background/index.js"
  },
  "content_scripts": [],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
